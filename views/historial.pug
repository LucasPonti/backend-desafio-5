extends inicio 

block historial
        div(class="container mt-3")
            div(class="jumbotron")
                h2(style="color:crimson")= "Historial"
                    br
                    if productos.length > 0 
                            div(class="table-responsive")
                                table(class="table table-dark")
                                    tr(style="color: yellow;") 
                                        th="Nombre" 
                                        th="Apellido" 
                                        th="Edad"
                                        each producto in productos 
                                                tr
                                                    td= producto.producto
                                                    td= producto.precio
                                                    td= producto.url
                                
                            
                    else
                        h3(class="alert alert-danger")="no se encontraron datos"
                
            form(action="/" method="get")
                button(class="btn btn-success mt-3 mb-5")="Volver"